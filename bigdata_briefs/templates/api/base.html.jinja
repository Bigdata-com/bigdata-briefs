<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">
<title>Bigdata Research Services</title>
<style>
@font-face {
  font-family: 'Hanken Grotesk';
  src: url('/static/fonts/HankenGrotesk-Regular.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}
@font-face {
  font-family: 'Hanken Grotesk';
  src: url('/static/fonts/HankenGrotesk-Bold.ttf') format('truetype');
  font-weight: 700;
  font-style: normal;
}

/* Enhanced scrollbar styles for better UX - Always visible */
.enhanced-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: #4a5568 #2d3748;
  overflow-y: scroll !important; /* Force scrollbar to always be visible */
}

.enhanced-scrollbar::-webkit-scrollbar {
  width: 8px;
  height: 8px;
  -webkit-appearance: none; /* Remove default styling */
}

.enhanced-scrollbar::-webkit-scrollbar-track {
  background: #2d3748;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 0 2px rgba(0,0,0,0.3);
}

.enhanced-scrollbar::-webkit-scrollbar-thumb {
  background: #4a5568;
  border-radius: 4px;
  border: 1px solid #2d3748;
  -webkit-box-shadow: inset 0 0 1px rgba(255,255,255,0.1);
}

.enhanced-scrollbar::-webkit-scrollbar-thumb:hover {
  background: #718096;
}

.enhanced-scrollbar::-webkit-scrollbar-thumb:active {
  background: #a0aec0;
}

/* Force scrollbars to always be visible */
.enhanced-scrollbar {
  scrollbar-gutter: stable;
}

/* Filter option hover effects */
.filter-option {
  transition: all 0.2s ease;
}

.filter-option:hover {
  background-color: rgba(113, 128, 150, 0.1);
  transform: translateX(2px);
}

/* Count badge animations */
.count-badge {
  transition: all 0.3s ease;
}

.count-badge:hover {
  transform: scale(1.05);
}
</style>
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://d3js.org/d3.v7.min.js"></script>
<script src="static/scripts/visualization.js?version={{version}}"></script>
<script src="static/scripts/validators.js?version={{version}}"></script>
<script>
	tailwind.config = {
		theme: {
			extend: {
				fontFamily: {
					sans: ['Hanken Grotesk', 'sans-serif'],
				},
				colors: {
					bg: '#000000',
					panel: '#70ff77',
					panelhover: '#ffffff',
					text: '#e6e9f5',
					muted: '#b7c0e0',
