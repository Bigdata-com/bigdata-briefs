{% extends "/api/base.html.jinja" %}
{% block content %}

<div id="infoModalsContainer"></div>

<!-- Empty State -->
<div id="emptyState" class="py-16">
  <div class="mb-12 text-center">
    <h2 class="text-3xl font-bold text-text mb-3">Ready to generate your brief?</h2>
    <p class="text-text3 text-lg max-w-2xl mx-auto">
      Select a pre-computed example to review existing briefs, or create a new one with personalized market updates tailored to your watchlist and interests.
    </p>
  </div>
  
  <div class="grid grid-cols-3 gap-6 max-w-5xl mx-auto mb-10">
    <!-- Quick Start Card 1 -->
    <div onclick="loadExample()" 
      class="bg-surface border border-border rounded-lg p-8 cursor-pointer hover:border-blue-600 transition-colors">
      <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-text mb-2">See Example</h3>
      <p class="text-text3 text-sm">Explore a pre-configured brief with sample data</p>
    </div>
    
    <!-- Quick Start Card 2 -->
    <div onclick="toggleConfigPanel()" 
      class="bg-surface border border-border rounded-lg p-8 cursor-pointer hover:border-blue-600 transition-colors">
      <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-text mb-2">New Brief</h3>
      <p class="text-text3 text-sm">Create a personalized brief for your watchlist</p>
    </div>
    
    <!-- Quick Start Card 3 -->
    <div onclick="window.open('https://github.com/Bigdata-com/bigdata-briefs', '_blank')" 
      class="bg-surface border border-border rounded-lg p-8 cursor-pointer hover:border-blue-600 transition-colors">
      <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-text mb-2">View Source</h3>
      <p class="text-text3 text-sm">Check out the complete codebase on GitHub</p>
    </div>
  </div>
  
  <div class="flex items-center justify-center">
    <button onclick="toggleConfigPanel()" 
      class="flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Brief
    </button>
  </div>
</div>

<!-- Dashboard Section -->
<div id="dashboardSection" class="hidden">
  <div id="resultsContainer">
    <!-- Brief Info Header -->
    <div id="analysisHeader" class="bg-surface border-b border-border px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-8">
          <div class="flex items-center gap-3">
            <span class="text-sm text-text3">Watchlist:</span>
            <span class="text-base font-semibold text-text" id="currentCompanies">-</span>
          </div>
          <div class="w-px h-6 bg-border"></div>
          <div class="flex items-center gap-3">
            <span class="text-sm text-text3">Date Range:</span>
            <span class="text-base font-semibold text-text" id="currentDateRange">-</span>
          </div>
        </div>
        
        <button onclick="startNewAnalysis()" 
                class="flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm font-medium transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          New Brief
        </button>
      </div>
    </div>
    
    <!-- Tab Navigation -->
    <div class="bg-surface border-b border-border">
      <div class="flex gap-1 px-8 pt-2">
        <button data-tab="overview" 
          class="flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 border-blue-600 text-blue-500">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM14 5a1 1 0 011-1h4a1 1 0 011 1v7a1 1 0 01-1 1h-4a1 1 0 01-1-1V5zM4 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1v-3zM14 16a1 1 0 011-1h4a1 1 0 011 1v3a1 1 0 01-1 1h-4a1 1 0 01-1-1v-3z"></path>
          </svg>
          Overview
        </button>
        <button data-tab="companies" 
          class="flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 border-transparent text-text3 hover:text-text2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
          Company Reports
        </button>
        <button data-tab="audit" 
          class="flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 border-transparent text-text3 hover:text-text2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          Audit
        </button>
        <!-- Debug Tab - Disabled
        <button data-tab="debug" 
          class="flex items-center gap-2 px-4 py-3 text-sm font-medium border-b-2 border-transparent text-text3 hover:text-text2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Debug
        </button>
        -->
      </div>
    </div>

    <!-- Tab Contents -->
    <div class="bg-surface">
      <!-- Overview Tab -->
      <div data-tab-content="overview" class="p-8">
        <div class="loading-indicator hidden">
          <div class="flex items-center justify-center py-20">
            <div class="animate-spin rounded-full h-8 w-8 border-2 border-blue-600 border-t-transparent"></div>
            <span class="ml-3 text-text3">Loading overview...</span>
          </div>
        </div>
        <div class="tab-actual-content"></div>
      </div>

      <!-- Company Reports Tab -->
      <div data-tab-content="companies" class="hidden p-8">
        <div class="loading-indicator hidden">
          <div class="flex items-center justify-center py-20">
            <div class="animate-spin rounded-full h-8 w-8 border-2 border-blue-600 border-t-transparent"></div>
            <span class="ml-3 text-text3">Loading company reports...</span>
          </div>
        </div>
        <div class="tab-actual-content"></div>
      </div>

      <!-- Audit Tab -->
      <div data-tab-content="audit" class="hidden p-8">
        <div class="loading-indicator hidden">
          <div class="flex items-center justify-center py-20">
            <div class="animate-spin rounded-full h-8 w-8 border-2 border-blue-600 border-t-transparent"></div>
            <span class="ml-3 text-text3">Loading audit data...</span>
          </div>
        </div>
        <div class="tab-actual-content"></div>
      </div>

      <!-- Debug Tab - Disabled
      <div data-tab-content="debug" class="hidden p-8">
        <div class="loading-indicator hidden">
          <div class="flex items-center justify-center py-20">
            <div class="animate-spin rounded-full h-8 w-8 border-2 border-blue-600 border-t-transparent"></div>
            <span class="ml-3 text-text3">Loading debug information...</span>
          </div>
        </div>
        <div class="tab-actual-content" id="debugTabContent"></div>
      </div>
      -->
    </div>
  </div>
</div>

<!-- Configuration Panel -->
<div id="configBackdrop" class="hidden fixed inset-0 bg-black/60 z-40"></div>
<div id="configPanel" class="fixed top-0 right-0 h-full w-full max-w-md bg-surface border-l border-border shadow-xl z-50 transform translate-x-full transition-transform duration-300 overflow-y-auto enhanced-scrollbar">
  <div class="p-6">
    <!-- Panel Header -->
    <div class="flex items-center justify-between mb-6 pb-4 border-b border-border">
      <div class="flex items-center gap-3">
        <h2 class="text-xl font-semibold text-text">Configuration</h2>
        <span class="text-xs text-text3 bg-surface2 px-2 py-1 rounded">{{ version }}</span>
      </div>
      <button onclick="closeConfigPanel()" class="text-text3 hover:text-text transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Quick Start -->
    <div class="mb-8">
      <h3 class="text-xs font-semibold text-text3 mb-2 uppercase tracking-wide">Quick Start</h3>
      <button onclick="loadExample()" 
        class="w-full text-left px-4 py-3 bg-surface2 hover:bg-surface border border-border rounded-lg transition-colors">
        <div class="font-medium text-text">See Example Brief</div>
        <div class="text-xs text-text3 mt-1">AI Scene Stocks</div>
      </button>
    </div>
    
    <!-- Configuration Form -->
    <form id="briefForm" autocomplete="off">
      <h3 class="text-xs font-semibold text-text3 mb-4 uppercase tracking-wide">Custom Configuration</h3>
      
      <!-- Company Universe -->
      <div class="mb-6">
        <label for="companies" class="block mb-2 text-sm font-medium text-text">
          <span>Company Universe</span>
          <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('companies')" title="Info">ⓘ</button>
        </label>
        
        <!-- Input Method Tabs -->
        <div class="flex gap-2 mb-3 border-b border-border">
          <button type="button" id="method-watchlist" onclick="switchCompanyInputMethod('watchlist')" 
            class="px-3 py-2 text-sm font-medium text-blue-500 border-b-2 border-blue-500">
            Watchlist
          </button>
          <button type="button" id="method-csv" onclick="switchCompanyInputMethod('csv')" 
            class="px-3 py-2 text-sm font-medium text-text3 hover:text-text2 border-b-2 border-transparent">
            CSV Upload
          </button>
          <button type="button" id="method-manual" onclick="switchCompanyInputMethod('manual')" 
            class="px-3 py-2 text-sm font-medium text-text3 hover:text-text2 border-b-2 border-transparent">
            Manual
          </button>
        </div>
        
        <!-- Watchlist Input -->
        <div id="input-watchlist" class="company-input-method">
          <div class="relative">
            <input id="companies_text" type="text"
              class="absolute w-[calc(100%-20px)] bg-surface2 text-text text-sm rounded-lg block p-3 h-[46px] focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <select id="companies"
              class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 h-[46px] z-10 focus:ring-2 focus:ring-blue-500 focus:outline-none cursor-pointer"
              onchange="this.previousElementSibling.value=this.options[this.selectedIndex].text;">
            </select>
          </div>
        </div>
        
        <!-- CSV Upload Input -->
        <div id="input-csv" class="company-input-method hidden">
          <input type="file" id="csvFile" accept=".csv" 
            class="hidden" onchange="handleCsvUpload(event)" />
          <button type="button" onclick="document.getElementById('csvFile').click()"
            class="w-full px-4 py-3 bg-surface2 hover:bg-surface text-text rounded-lg border border-border transition-colors">
            <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Upload CSV File
          </button>
          <div id="csvPreview" class="mt-3 text-xs text-text3 hidden">
            <div class="mb-2">Uploaded: <span id="csvFileName"></span> (<span id="csvEntityCount"></span> entities)</div>
            <div id="csvEntities" class="max-h-32 overflow-y-auto bg-surface2 rounded p-2 text-xs"></div>
          </div>
        </div>
        
        <!-- Manual Input -->
        <div id="input-manual" class="company-input-method hidden">
          <textarea id="companies_manual" rows="3"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="Enter RavenPack entity IDs separated by commas (e.g., 4A6F00, D8442A)"></textarea>
        </div>
      </div>

      <!-- Date Range -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div>
          <label for="start_date" class="block mb-2 text-sm font-medium text-text">
            <span>Start Date</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('start_date')" title="Info">ⓘ</button>
          </label>
          <input type="date" id="start_date"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            value="{{ default_start_date }}" required />
        </div>
        <div>
          <label for="end_date" class="block mb-2 text-sm font-medium text-text">
            <span>End Date</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('end_date')" title="Info">ⓘ</button>
          </label>
          <input type="date" id="end_date"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            value="{{ default_end_date }}" required />
        </div>
      </div>

      <!-- Topic Control (Expandable) -->
      <button type="button" onclick="toggleTopicControl()" id="topicControlBtn"
        class="w-full flex items-center justify-between px-4 py-3 bg-surface2 hover:bg-surface rounded-lg transition-colors mb-6">
        <span class="text-text font-medium text-sm">Topic Control</span>
        <svg id="topicControlIcon" class="w-4 h-4 text-text3 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <div id="topic-control" class="hidden space-y-6 mb-6 pl-4 border-l-2 border-blue-600/30">
        <!-- Topic Presets -->
        <div>
          <label for="topicPreset" class="block mb-2 text-sm font-medium text-text">
            <span>Topic Preset</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('topics')" title="Info">ⓘ</button>
          </label>
          <select id="topicPreset" onchange="handleTopicPresetChange()"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none cursor-pointer">
            <option value="finance">Finance (Default)</option>
            <option value="all">All {company}</option>
            <option value="esg">ESG</option>
            <option value="custom">Custom</option>
          </select>
        </div>

        <!-- Topics selector -->
        <div>
          <label for="topics" class="block mb-2 text-sm font-medium text-text">
            <span>Topics</span>
          </label>
          <div id="add-form" class="flex gap-3 mb-4">
            <input type="text" id="new-sentence-input" placeholder="Add new topic (must include {company})"
              class="flex-grow bg-surface2 border border-border text-text text-sm rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none">
            <button id="add-button" type="button"
              class="bg-blue-600 text-white font-medium px-4 py-3 rounded-lg hover:bg-blue-700 transition-colors">
              Add
            </button>
          </div>

          <div id="sentence-list" class="space-y-3">
          </div>
        </div>
      </div>

      <!-- Advanced Options (Expandable) -->
      <button type="button" onclick="toggleAdvancedOptions()" id="advancedOptionsBtn"
        class="w-full flex items-center justify-between px-4 py-3 bg-surface2 hover:bg-surface rounded-lg transition-colors mb-6">
        <span class="text-text font-medium text-sm">Advanced Options</span>
        <svg id="advancedOptionsIcon" class="w-4 h-4 text-text3 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>

      <div id="advanced-options" class="hidden space-y-6 mb-6 pl-4 border-l-2 border-blue-600/30">
        <!-- Sources -->
        <div>
          <label for="sources" class="block mb-2 text-sm font-medium text-text">
            <span>Sources</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('sources')" title="Info">ⓘ</button>
          </label>
          <input id="sources"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="{% if sources %}{{ ','.join(sources) }}{% else %}Optional: Comma-separated entity IDs{% endif %}" />
        </div>

        <!-- Novelty -->
        <div>
          <label for="novelty" class="flex items-center gap-2 text-sm font-medium text-text">
            <input type="checkbox" id="novelty" 
              class="w-4 h-4 bg-surface2 border-border rounded focus:ring-blue-500"
              {% if novelty %}checked{% endif %} />
            <span>Novelty Filter</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('novelty')" title="Info">ⓘ</button>
          </label>
        </div>

        <!-- Include Title and Summary -->
        <div>
          <label for="includeTitleSummary" class="flex items-center gap-2 text-sm font-medium text-text">
            <input type="checkbox" id="includeTitleSummary" 
              class="w-4 h-4 bg-surface2 border-border rounded focus:ring-blue-500"
              checked />
            <span>Include Title and Summary</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('includeTitleSummary')" title="Info">ⓘ</button>
          </label>
          <p class="text-xs text-text3 mt-1 ml-6">Backend support coming soon</p>
        </div>

        <!-- Source Rank Boost -->
        <div>
          <label for="source_rank_boost" class="block mb-2 text-sm font-medium text-text">
            <span>Source Rank Boost (0-10)</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('source_rank_boost')" title="Info">ⓘ</button>
          </label>
          <input type="number" id="source_rank_boost" min="0" max="10"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="Optional" />
        </div>

        <!-- Freshness Boost -->
        <div>
          <label for="freshness_boost" class="block mb-2 text-sm font-medium text-text">
            <span>Freshness Boost (0-10)</span>
            <button type="button" class="text-blue-500 text-xs ml-1" onclick="showInfoModal('freshness_boost')" title="Info">ⓘ</button>
          </label>
          <input type="number" id="freshness_boost" min="0" max="10"
            class="bg-surface2 border border-border text-text text-sm rounded-lg block w-full p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            placeholder="Optional" />
        </div>
      </div>

      <!-- Submit Button -->
      <div class="pt-4 border-t border-border">
        <button type="submit"
          class="w-full flex items-center justify-center gap-2 text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg text-sm px-6 py-3 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Generate Brief
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Spinner -->
<div id="spinner" class="hidden fixed top-4 right-4 bg-surface border border-border rounded-lg px-4 py-3 shadow-lg z-50">
  <div class="flex items-center gap-3">
    <div class="animate-spin rounded-full h-4 w-4 border-2 border-blue-600 border-t-transparent"></div>
    <span class="text-text text-sm font-medium">Running analysis...</span>
  </div>
</div>

<!-- Log Viewer -->
<div class="my-8 bg-surface border border-border rounded-lg">
  <button onclick="toggleProcessLogs()" 
    class="w-full flex items-center justify-between px-6 py-4 hover:bg-surface2 transition-colors rounded-t-lg">
    <h2 class="text-base font-semibold text-text flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
        </path>
      </svg>
      Process Logs
    </h2>
    <svg id="logsIcon" class="w-5 h-5 text-text3 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  <div id="logViewerContainer" class="hidden px-6 pb-6">
    <div id="logViewer"
      class="bg-surface2 border border-border rounded-lg p-4 h-64 overflow-y-auto font-mono text-sm whitespace-pre-wrap break-words text-text2 enhanced-scrollbar">
    </div>
  </div>
</div>

<!-- Database Status Viewer -->
<div class="my-8 bg-surface border border-border rounded-lg">
  <button onclick="toggleDatabaseStatus()" 
    class="w-full flex items-center justify-between px-6 py-4 hover:bg-surface2 transition-colors rounded-t-lg">
    <h2 class="text-base font-semibold text-text flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4">
        </path>
      </svg>
      Database Status
    </h2>
    <svg id="databaseStatusIcon" class="w-5 h-5 text-text3 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  <div id="databaseStatusContainer" class="hidden px-6 pb-6">
    <div class="flex items-center justify-between mb-4">
      <div class="text-sm text-text3">
        <span id="dbStatusSummary">Loading...</span>
      </div>
      <button onclick="loadDatabaseStatus()" 
        class="flex items-center gap-2 px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-xs font-medium transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        Refresh
      </button>
    </div>
    
    <!-- Tabs for different database tables -->
    <div class="mb-4 flex gap-2 border-b border-border">
      <button onclick="switchDatabaseTab('runs')" id="dbTab-runs"
        class="px-4 py-2 text-sm font-medium border-b-2 border-blue-600 text-blue-500">
        Workflow Runs
      </button>
      <button onclick="switchDatabaseTab('reports')" id="dbTab-reports"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-text3 hover:text-text2">
        Reports
      </button>
      <button onclick="switchDatabaseTab('bullets')" id="dbTab-bullets"
        class="px-4 py-2 text-sm font-medium border-b-2 border-transparent text-text3 hover:text-text2">
        Bullet Points
      </button>
    </div>
    
    <!-- Content area -->
    <div id="databaseStatusContent" class="bg-surface2 border border-border rounded-lg p-4 overflow-auto enhanced-scrollbar" style="max-height: 500px;">
      <div class="text-center text-text3 py-8">Click "Refresh" to load database status</div>
    </div>
  </div>
</div>

<!-- Modal for JSON output -->
<div id="jsonModal" class="hidden fixed z-[1000] inset-0 w-screen h-screen bg-black/70">
  <div class="bg-white relative my-20 mx-auto p-6 rounded-lg w-4/5 max-w-[900px] shadow-xl border border-gray-200">
    <button id="copyBtn" onclick="copyJson()"
      class="absolute top-4 right-14 text-sm px-4 py-2 cursor-pointer text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors font-medium">Copy</button>
    <button onclick="closeModal()"
      class="absolute top-4 right-4 text-2xl text-gray-600 hover:text-gray-900 w-8 h-8 flex items-center justify-center rounded-lg hover:bg-gray-100 transition-colors">&times;</button>
    <h2 class="text-gray-900 text-xl font-bold mb-4">Raw JSON Output</h2>
    <pre id="jsonContent"
      class="bg-gray-900 text-gray-100 p-4 whitespace-pre-wrap break-words overflow-auto rounded-lg mt-2 border border-gray-700"
      style="max-height:60vh;"></pre>
  </div>
</div>

<script>
  let topic_sentences = {{ topics | tojson }};
  const watchlists = {{ example_watchlists | tojson }};
  const example_request_id = "{{ example_request_id }}";
  let currentCompanyInputMethod = 'watchlist';
  window.csvEntities = [];

  // Populate the dropdown with watchlists
  const comp_select = document.getElementById('companies');
  const comp_text = document.getElementById('companies_text');
  watchlists.forEach((watchlist) => {
    if (watchlist.id === "{{ companies }}") {
      comp_text.value = watchlist.name;
    }
    const option = document.createElement('option');
    option.value = watchlist.id;
    option.textContent = watchlist.name;
    comp_select.appendChild(option);
  });

  // Load Example button functionality
  function loadExample() {
    if (window.loadRequestId) {
      loadRequestId(example_request_id);
    }
  }
  window.loadExample = loadExample;

  // Company input method switching
  function switchCompanyInputMethod(method) {
    currentCompanyInputMethod = method;
    // Update tab buttons
    document.querySelectorAll('[id^="method-"]').forEach(btn => {
      btn.classList.remove('text-blue-500', 'border-blue-500');
      btn.classList.add('text-text3', 'border-transparent');
    });
    document.getElementById(`method-${method}`).classList.remove('text-text3', 'border-transparent');
    document.getElementById(`method-${method}`).classList.add('text-blue-500', 'border-blue-500');
    
    // Show/hide input methods
    document.querySelectorAll('.company-input-method').forEach(div => div.classList.add('hidden'));
    document.getElementById(`input-${method}`).classList.remove('hidden');
  }
  window.switchCompanyInputMethod = switchCompanyInputMethod;

  // CSV upload handler
  function handleCsvUpload(event) {
    const file = event.target.files[0];
    if (!file) return;
    
    const reader = new FileReader();
    reader.onload = function(e) {
      const text = e.target.result;
      const lines = text.split('\n').map(l => l.trim()).filter(l => l);
      window.csvEntities = lines;
      
      document.getElementById('csvFileName').textContent = file.name;
      document.getElementById('csvEntityCount').textContent = window.csvEntities.length;
      document.getElementById('csvEntities').textContent = window.csvEntities.slice(0, 10).join(', ') + (window.csvEntities.length > 10 ? '...' : '');
      document.getElementById('csvPreview').classList.remove('hidden');
    };
    reader.readAsText(file);
  }
  window.handleCsvUpload = handleCsvUpload;

  // Reset to start - clear results and show empty state
  function resetToStart() {
    const emptyState = document.getElementById('emptyState');
    const dashboardSection = document.getElementById('dashboardSection');
    
    if (emptyState) emptyState.style.display = 'block';
    if (dashboardSection) dashboardSection.classList.add('hidden');
    
    window.lastReport = null;
    
    if (window.tabController) {
      window.tabController.reset();
    }
    
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
  window.resetToStart = resetToStart;

  function startNewAnalysis() {
    resetToStart();
    toggleConfigPanel();
  }
  window.startNewAnalysis = startNewAnalysis;

  window.closeModal = closeModal;

  // Toggle Topic Control section
  function toggleTopicControl() {
    const topicControl = document.getElementById('topic-control');
    const icon = document.getElementById('topicControlIcon');
    
    if (topicControl && icon) {
      topicControl.classList.toggle('hidden');
      icon.classList.toggle('rotate-180');
    }
  }
  window.toggleTopicControl = toggleTopicControl;

  // Initialize tab controller when DOM is ready
  document.addEventListener('DOMContentLoaded', function() {
    if (window.tabController) {
      window.tabController.init();
    }
  });
</script>
